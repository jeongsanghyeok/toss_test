<%- content_for :title do %>
로그인 - LUXE STORE
<% end -%>

<!-- Hero Section -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-100 py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-md mx-auto">
      
      <!-- Logo and Title -->
      <div class="text-center mb-8">
        <div class="w-16 h-16 gradient-bg rounded-2xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">로그인</h1>
        <p class="text-gray-600">LUXE STORE에 오신 것을 환영합니다</p>
      </div>

      <!-- Login Form -->
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "space-y-6") do |f| %>
          
          <!-- Email Field -->
          <div class="space-y-2">
            <%= f.label :email, "이메일 주소", class: "block text-sm font-semibold text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
                placeholder: "이메일을 입력하세요" %>
          </div>

          <!-- Password Field -->
          <div class="space-y-2">
            <%= f.label :password, "비밀번호", class: "block text-sm font-semibold text-gray-700" %>
            <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
                placeholder: "비밀번호를 입력하세요" %>
          </div>

          <!-- Remember Me -->
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, "로그인 상태 유지", class: "ml-2 block text-sm text-gray-700" %>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div class="pt-4">
            <%= f.submit "로그인", class: "w-full gradient-bg text-white font-semibold py-4 px-6 rounded-xl hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer" %>
          </div>

        <% end %>

        <!-- Social Login Buttons -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <p class="text-center text-gray-500 text-sm mb-4">또는 간편하게 로그인</p>
          <div class="space-y-3">
            <!-- Google Login -->
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, 
                class: "w-full bg-white border border-gray-300 text-gray-700 font-medium py-3 px-4 rounded-xl hover:bg-gray-50 transition-colors duration-200 flex items-center justify-center space-x-3",
                data: { turbo: false } do %>
              <svg viewBox="0 0 24 24" class="w-5 h-5">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              <span>구글로 로그인</span>
            <% end %>
          </div>
          
          <div class="mt-4">
            <p class="text-xs text-center text-green-600 bg-green-50 px-3 py-2 rounded-lg border border-green-200">
              ✅ Google OAuth 설정이 완료되었습니다. 구글 계정으로 간편하게 로그인하세요!
            </p>
          </div>
        </div>
        
        <!-- Links -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="text-center space-y-2">
            <%= link_to "회원가입", new_registration_path(resource_name), class: "block text-purple-600 hover:text-purple-800 font-medium transition-colors duration-200" %>
            <%= link_to "비밀번호를 잊으셨나요?", new_password_path(resource_name), class: "block text-gray-500 hover:text-gray-700 text-sm transition-colors duration-200" %>
          </div>
        </div>
      </div>

      <!-- Back to Home -->
      <div class="text-center mt-6">
        <%= link_to "홈으로 돌아가기", root_path, class: "text-gray-500 hover:text-gray-700 text-sm transition-colors duration-200" %>
      </div>
      
    </div>
  </div>
</div>