<%- content_for :title do %>
프로필 설정 - LUXE STORE
<% end -%>

<!-- Profile Header -->
<div class="bg-gradient-to-r from-purple-600 via-pink-500 to-indigo-600 py-16">
  <div class="container mx-auto px-4 lg:px-6">
    <div class="text-center">
      <div class="w-24 h-24 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
      </div>
      <h1 class="text-3xl lg:text-4xl font-bold text-white mb-2">프로필 설정</h1>
      <p class="text-white text-opacity-90">계정 정보를 관리하고 개인 설정을 변경하세요</p>
    </div>
  </div>
</div>

<div class="container mx-auto px-4 lg:px-6 py-12">
  <div class="max-w-4xl mx-auto">
    
    <!-- Back Button -->
    <div class="mb-8">
      <%= link_to root_path, class: "inline-flex items-center text-gray-600 hover:text-purple-600 transition-colors duration-200 group" do %>
        <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        홈으로 돌아가기
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Profile Sidebar -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden sticky top-8">
          
          <!-- Profile Info -->
          <div class="p-8 text-center">
            <div class="w-20 h-20 gradient-bg rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              <%= current_user.email.split('@').first.capitalize %>
            </h3>
            <p class="text-gray-500 text-sm mb-4">
              <%= current_user.email %>
            </p>
            <div class="flex items-center justify-center space-x-2 text-sm">
              <% if current_user.provider.present? %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= current_user.provider.capitalize %> 연동
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  이메일 계정
                </span>
              <% end %>
            </div>
          </div>

          <!-- Navigation -->
          <div class="border-t border-gray-200">
            <nav class="p-4 space-y-2">
              <a href="#account-settings" class="nav-link active flex items-center px-4 py-3 text-sm font-medium text-purple-600 bg-purple-50 rounded-xl">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                계정 설정
              </a>
              <a href="#security" class="nav-link flex items-center px-4 py-3 text-sm font-medium text-gray-600 hover:text-purple-600 hover:bg-gray-50 rounded-xl transition-colors duration-200">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                보안 설정
              </a>
            </nav>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="lg:col-span-2">
        
        <!-- Account Settings Section -->
        <div id="account-settings" class="bg-white rounded-3xl shadow-xl overflow-hidden mb-8">
          <div class="p-8">
            <div class="flex items-center mb-6">
              <div class="w-10 h-10 gradient-bg rounded-xl flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold text-gray-900">계정 정보</h2>
                <p class="text-gray-600">기본 프로필 정보를 관리하세요</p>
              </div>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
              
              <!-- Error Messages -->
              <% if resource.errors.any? %>
                <div class="bg-red-50 border border-red-200 rounded-xl p-4">
                  <div class="flex">
                    <svg class="w-5 h-5 text-red-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                      <h3 class="text-sm font-medium text-red-800 mb-2">다음 오류를 확인해주세요:</h3>
                      <ul class="text-sm text-red-700 space-y-1">
                        <% resource.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Pending Email Confirmation -->
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
                  <div class="flex">
                    <svg class="w-5 h-5 text-yellow-400 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                      <h3 class="text-sm font-medium text-yellow-800 mb-1">이메일 인증 대기 중</h3>
                      <p class="text-sm text-yellow-700">새 이메일 주소 인증을 기다리고 있습니다: <strong><%= resource.unconfirmed_email %></strong></p>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Email Field -->
              <div>
                <%= f.label :email, "이메일 주소", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                    class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
                    placeholder: "이메일을 입력하세요" %>
              </div>

              <!-- Current Password -->
              <div>
                <%= f.label :current_password, "현재 비밀번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <p class="text-xs text-gray-500 mb-2">변경사항을 확인하기 위해 현재 비밀번호가 필요합니다</p>
                <%= f.password_field :current_password, autocomplete: "current-password",
                    class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
                    placeholder: "현재 비밀번호를 입력하세요" %>
              </div>

              <!-- Submit Button -->
              <div class="pt-4">
                <%= f.submit "정보 업데이트", class: "w-full gradient-bg text-white font-semibold py-4 px-6 rounded-xl hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer" %>
              </div>

            <% end %>
          </div>
        </div>

        <!-- Security Settings Section -->
        <div id="security" class="bg-white rounded-3xl shadow-xl overflow-hidden mb-8">
          <div class="p-8">
            <div class="flex items-center mb-6">
              <div class="w-10 h-10 gradient-bg rounded-xl flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold text-gray-900">보안 설정</h2>
                <p class="text-gray-600">비밀번호 변경 및 보안 관련 설정</p>
              </div>
            </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
              
              <!-- New Password -->
              <div>
                <%= f.label :password, "새 비밀번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <p class="text-xs text-gray-500 mb-2">변경하지 않으려면 비워두세요</p>
                <%= f.password_field :password, autocomplete: "new-password",
                    class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
                    placeholder: "새 비밀번호를 입력하세요" %>
                <% if @minimum_password_length %>
                  <p class="text-xs text-gray-500 mt-1">최소 <%= @minimum_password_length %>자 이상 입력해주세요</p>
                <% end %>
              </div>

              <!-- Password Confirmation -->
              <div>
                <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password",
                    class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
                    placeholder: "새 비밀번호를 다시 입력하세요" %>
              </div>

              <!-- Current Password for Security -->
              <div>
                <%= f.label :current_password, "현재 비밀번호", class: "block text-sm font-semibold text-gray-700 mb-2" %>
                <p class="text-xs text-gray-500 mb-2">비밀번호 변경을 위해 현재 비밀번호가 필요합니다</p>
                <%= f.password_field :current_password, autocomplete: "current-password",
                    class: "w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors duration-200",
                    placeholder: "현재 비밀번호를 입력하세요" %>
              </div>

              <!-- Submit Button -->
              <div class="pt-4">
                <%= f.submit "비밀번호 변경", class: "w-full gradient-bg text-white font-semibold py-4 px-6 rounded-xl hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 cursor-pointer" %>
              </div>

            <% end %>
          </div>
        </div>

        <!-- Danger Zone -->
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border-2 border-red-200">
          <div class="p-8">
            <div class="flex items-center mb-6">
              <div class="w-10 h-10 bg-red-500 rounded-xl flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h2 class="text-2xl font-bold text-red-900">계정 삭제</h2>
                <p class="text-red-600">이 작업은 되돌릴 수 없습니다</p>
              </div>
            </div>

            <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-6">
              <h3 class="text-sm font-semibold text-red-800 mb-2">계정을 삭제하면:</h3>
              <ul class="text-sm text-red-700 space-y-1">
                <li>• 모든 개인 정보가 영구적으로 삭제됩니다</li>
                <li>• 주문 내역과 장바구니가 모두 사라집니다</li>
                <li>• 동일한 이메일로 재가입이 가능하지만 기존 데이터는 복구되지 않습니다</li>
              </ul>
            </div>

            <%= button_to "계정 삭제하기", registration_path(resource_name), 
                data: { 
                  confirm: "정말로 계정을 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다.", 
                  turbo_confirm: "정말로 계정을 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다." 
                }, 
                method: :delete,
                class: "w-full bg-red-600 text-white font-semibold py-4 px-6 rounded-xl hover:bg-red-700 transition-colors duration-200" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  // Smooth scrolling for navigation links
  document.addEventListener('DOMContentLoaded', function() {
    const navLinks = document.querySelectorAll('.nav-link');
    
    navLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        
        // Remove active class from all links
        navLinks.forEach(l => {
          l.classList.remove('active', 'text-purple-600', 'bg-purple-50');
          l.classList.add('text-gray-600');
        });
        
        // Add active class to clicked link
        this.classList.add('active', 'text-purple-600', 'bg-purple-50');
        this.classList.remove('text-gray-600');
        
        // Scroll to target section
        const targetId = this.getAttribute('href').substring(1);
        const targetSection = document.getElementById(targetId);
        
        if (targetSection) {
          targetSection.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Update active nav link on scroll
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const id = entry.target.id;
            const correspondingLink = document.querySelector(`a[href="#${id}"]`);
            
            if (correspondingLink) {
              // Remove active from all
              navLinks.forEach(l => {
                l.classList.remove('active', 'text-purple-600', 'bg-purple-50');
                l.classList.add('text-gray-600');
              });
              
              // Add active to current
              correspondingLink.classList.add('active', 'text-purple-600', 'bg-purple-50');
              correspondingLink.classList.remove('text-gray-600');
            }
          }
        });
      },
      { rootMargin: '-20% 0px -70% 0px' }
    );
    
    // Observe all sections
    ['account-settings', 'security'].forEach(id => {
      const section = document.getElementById(id);
      if (section) observer.observe(section);
    });
  });
</script>
